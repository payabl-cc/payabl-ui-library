{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@public/*": [
        "public/*"
      ]
    },
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": [
    "src/components/**/*.ts", "src/components/**/*.test.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
